# EditorConfig helps developers define and maintain
# consistent coding styles between different editors and IDEs.

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2
max_line_length = 120

ij_any_align_multiline_parameters = false

ij_html_space_inside_empty_tag = true
ij_html_quote_style = double

[*.md]
trim_trailing_whitespace = false

[{*.ts,*.tsx}]
ij_typescript_use_semicolon_after_statement = false
ij_typescript_force_semicolon_style = true
ij_typescript_spaces_within_interpolation_expressions = false
ij_typescript_spaces_within_object_literal_braces = true
ij_typescript_spaces_within_imports = true
ij_typescript_import_sort_module_name = false
ij_typescript_import_sort_members = true
ij_typescript_import_merge_members = true
ij_typescript_use_double_quotes = false
ij_typescript_force_quote_style = true
ij_typescript_enforce_trailing_comma = whenmultiline
ij_typescript_spaces_within_array_initializer_brackets = true

[{*.js,*.jsx}]
ij_javascript_use_semicolon_after_statement = false
ij_javascript_force_semicolon_style = true
ij_javascript_spaces_within_interpolation_expressions = false
ij_javascript_spaces_within_object_literal_braces = true
ij_javascript_spaces_within_imports = true
ij_javascript_import_sort_module_name = false
ij_javascript_import_sort_members = true
ij_javascript_import_merge_members = true
ij_javascript_use_double_quotes = false
ij_javascript_force_quote_style = true
ij_javascript_enforce_trailing_comma = whenmultiline
ij_javascript_spaces_within_array_initializer_brackets = true

[*.sql]
indent_size = 4

[*.rs]
indent_size = 4
